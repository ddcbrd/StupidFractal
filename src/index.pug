doctype html 
html 
	head 
		meta(charset="UTF-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css")
		script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js")
		script(src="https://cdn.jsdelivr.net/npm/jquery@3.6.3/dist/jquery.min.js") 
		script(src="./modules/range.js")
		script(src="./modules/gpu-browser.min.js") 
		script() !{kernelFunctions}
		script(src="./index.js", defer)
		title Fractal Generator
	body 
		.container-fluid 
			.row 
				.col-3#formCol
					form(action="", id="genForm") 
						.row.justify-content-start
							.col
								.form-floating.mb-2.mt-4
									select(name="fractalName", class="form-select form-input", id="fnameField") 
										each availableKernel in ak 
											option(value=availableKernel) #{availableKernel}
									label(for="fnameField") Fractal Type
						each inp in inputList
							.row.justify-content-start 
								.col 
									.form-floating.mb-2
										input(type=inp.type, name=inp.name, id=inp.id, value=inp.value, placeholder=inp.value, step="any", class="form-control form-control-sm form-input", isgenconst=inp.isGenConst.toString())
										label(for=inp.id) #{inp.name}
						.row
							.col
								input(type="button", value="Send", class="form-control form-control-sm", id="sendBtn")
							.col 
								input(type="button", value="Download", class="form-control form-control-sm", id="downloadBtn", disabled)
				.col.mt-4#imgFrame
		.dl.invisible
